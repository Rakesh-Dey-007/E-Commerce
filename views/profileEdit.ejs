<!doctype html>
<html>
<!-- ********** User Profile Edit *********** -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Update Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css"
        integrity="sha512-9xKTRVabjVeZmc+GUW8GgSmcREDunMM+Dt/GrzchfN8tkwHizc5RP4Ok/MXFFy5rIjJjzhndFScTceq5e6GvVQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        @import url('https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Edu+AU+VIC+WA+NT+Arrows:wght@400..700&family=Italianno&display=swap');

        * {
            font-family: "Chakra Petch", serif;
        }
    </style>
</head>

<body class="bg-zinc-900">

    <div class="flex text-white ml-5 p-5">
        <a href="/"><button type="button"
                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-zinc-700 dark:hover:bg-zinc-800 dark:focus:ring-blue-800 mr-3 hover:scale-110 transform transition duration-300"><i
                    class="fa-solid fa-reply-all"></i> &nbsp;Back to Home</button></a>
    </div>



    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <h1 class="text-3xl mb-3 mt-5 font-700" style="color: #00ffff;">Update Profile Details</h1>


        <form action="/user/profileUpdate" method="post" enctype="multipart/form-data">
            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="text" name="fullname" value="<%= user.fullname || '' %>" placeholder="Enter Name" required>
            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="text" name="username" value="<%= user.username || '' %>" placeholder="Username" required>
            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="text" name="email" value="<%= user.email || '' %>" placeholder="Email Address" required readonly>

            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="number" name="mobile" value="<%= user.mobile || '' %>" placeholder="Phone Number" required>


            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="text" name="address" value="<%= user.address || '' %>" placeholder="Enter Address" required>
            <input
                class="px-5 py-2 border-2 border-zinc-800 hover:border-blue-800 outline-none rounded-lg bg-transparent mb-5"
                type="number" name="age" value="<%= user.age || '' %>" placeholder="Your Age">

            <label class="block mb-3">Profile Image:</label>
            <input type="file" name="profileImage"
                class="w-50 text-zinc-900 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-gray-700 file:text-white hover:file:bg-zinc-600 dark:bg-zinc-800 dark:text-zinc-300 dark:file:bg-gray-700 dark:hover:file:bg-zinc-600 rounded border-2 border-zinc-800 hover:border-blue-800 mb-5">

            <% if (user.profileImage) { %>
                <img src="/uploads/<%= user.profileImage %>" alt="Profile Image" class="w-32 h-32 mt-4 rounded-lg">
                <% } %>


                    <button
                        class="px-5 py-2 bg-yellow-600 rounded-lg hover:scale-110 transform transition duration-300 hover:bg-yellow-700 ml-5"
                        type="submit">Update</button>

        </form>


    </div>




</body>

</html>